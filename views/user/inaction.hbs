<div class="container my-6">
    <h1>Cambio de contraseña</h1>
    {{message}}

    <hr style="height:3px;border:none;">
    <form action="/do-the-action" method="POST">
        <div class="form-group my-3">
            <label for="username" class="form-label">Email</label>
            <input type="email" class="form-control form-control-lg" name="email" id="email" value="{{user.email}}"
                required>
        </div>
        <div class="form-group my-3">
            <label class="form-label">Contraseña</label>
            <input type="password" class="form-control form-control-lg" name="password" required>
        </div>
        <div class="form-group my-3">
            <label class="form-label">Nueva contraseña</label>
            <input type="password" class="form-control form-control-lg" name="newPassword" required>
        </div>
        <div class="form-group my-3">
            <label class="form-label">Repite la nueva contraseña</label>
            <input type="password" class="form-control form-control-lg" name="passwordRepeat" required>
        </div>
        {{#if error}}
        <div class="alert alert-danger my-2">
            {{error}}
        </div>
        {{/if}}

        <button type="submit" class="button btn__primary">Cambia la contraseña y accede</button>
    </form>
</div>